---
import type { Project } from "@/data/projects";
import IconRightUp from "../components/icon-rightup.astro"

type Props = Project;

const { title, techs, link, icon, isComingSoon } = Astro.props;

const formatTechs = (values: string[]) =>
  values.toString().replaceAll(",", " â€¢ ");
---

<a
  class="group flex w-full cursor-pointer flex-col justify-between gap-2 rounded-lg border border-neutral-700 p-4 transition-all duration-100 hover:-translate-y-2 hover:border-primary-600 md:flex-row md:items-center"
  href={ isComingSoon ? null : link } target="_blank" rel="noreferrer" >
  <div class="flex flex-col gap-4 md:flex-row md:items-center">
    <span class={`text-2xl icon icon-${icon}`} />
    <p class="text-white">{title}</p>
    <p class="text-sm text-primary-400">{formatTechs(techs)}</p>
  </div>
  { isComingSoon ? <p class="w-fit rounded-lg bg-primary-400 text-neutral-900 text-sm px-4 py-1">Soon</p>
    : <span class="icon icon-upper-right-arrow text-neutral-500 transition-all duration-300 group-hover:translate-x-1"/> }
</a>
